
public class Aplicacion {

    public static void main(String[] args) {
    	           
        Producto productoGaseosa = new Producto("Gaseosa", 100, 40);
        Producto productoVino = new Producto("Vino", 2000, 70);
        
        Inventario inventario = new Inventario();
        inventario.agregarProducto(productoGaseosa);
        inventario.agregarProducto(productoVino);
            
        inventario.informarPrecios();
        
        System.out.println("Inicio");
        System.out.println("El precio de venta es: " +productoGaseosa.getNombre()+" "+productoGaseosa.getPrecio()+" "+productoGaseosa.getStock());
        System.out.println("El precio de venta es: " +productoVino.getNombre()+" "+productoVino.getPrecio()+" "+productoVino.getStock()+" ");
    }

}




public class Producto { 

	private String Nombre; 
 
	public String getNombre() { 
		return Nombre; 
	} 

	private double Precio; 

	public double getPrecio() { 
		return Precio; 
	} 
 
	private int Stock; 
 
	public int getStock() { 
		return Stock; 
 
	} 
  
public Producto(String nombre, double precio, int stock) {
	super();
	this.Nombre = nombre;
	this.Precio = precio;
	this.Stock = stock;
	
	
	}

 
} 



import java.util.List;
import java.util.ArrayList;

public class Inventario{

private List<Producto> listaDeProductos;


public Inventario(){
    this.listaDeProductos=new ArrayList<>();
}

public void agregarProducto(Producto p){
    this.listaDeProductos.add(p);
}
 
public List<Double>informarPrecios(){
List<Double>listaDePrecios=new ArrayList<>();
for(Producto p:this.listaDeProductos){
       listaDePrecios.add(p.getPrecio());
}
return listaDePrecios;
}

public List<Producto> getListaDeProductos() {
    return listaDeProductos;
}
 

}


